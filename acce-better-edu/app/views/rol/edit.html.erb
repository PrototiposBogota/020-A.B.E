<div class="center">
  <h4>Actualizar Rol</h4>
</div>
<div class="row">
  <div class="col s12 m6 offset-m3">
    <div id="div-message" class="hidden-element">
      <span id="span-message" class="white-text"></span>
    </div>
    <div id="div-progress" class="progress hidden-element">
      <div class="indeterminate"></div>
    </div>
  </div>
</div>
<div class="row">
  <form id="frm-modificarRol" class="col s12 m6 offset-m3">
    <div class="row">
      <div class="input-field col s12">
        <input id="txt-nombre" type="text" name="txt-nombre" class="validate" maxlength="3" value="<%= @rol.nombre %>">
        <label for="txt-nombre">Nombre *</label>
      </div>
      <div class="input-field col s12">
        <input id="txt-menu" type="text" name="txt-menu" class="validate" maxlength="3" value="<%= @rol.menu %>">
        <label for="txt-menu">Menu *</label>
      </div>
      <div class="input-field col s12">
        <input id="txt-descripcion" type="text" name="txt-descripcion" class="validate" value="<%= @rol.descripcion %>">
        <label for="txt-descripcion">Descripcion *</label>
      </div>
    </div>
    <div class="row">
      <div class="col s6">
        <input type="hidden" name="txt-id" value="<%= @rol.id %>">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <button type="button" class="btn" id="btn-modificarRol" onclick="">
          Actualizar <i class="material-icons right">edit</i>
        </button>
      </div>
      <div class="col s6">
        <a href="<%= rol_index_path %>" class="btn">
          Listar <i class="material-icons right">list</i>
        </a>
      </div>
    </div>
  </form>
</div>
