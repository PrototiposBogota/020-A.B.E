<div class="center">
  <h4>Actualizar Universidad</h4>
</div>
<div class="row">
  <div class="col s12 m6 offset-m3">
    <div id="div-message" class="hidden-element">
      <span id="span-message" class="white-text"></span>
    </div>
    <div id="div-progress" class="progress hidden-element">
      <div class="indeterminate"></div>
    </div>
  </div>
</div>
<div class="row">
  <form id="frm-modificarUniversidad" class="col s12 m6 offset-m3">
    <div class="row">
      <div class="input-field col s12">
        <select name="select-ciudad">
          <option value="" disabled selected>Seleccionar...</option>
          <% Ciudad.all.each do |ciu| %>
            <% if ciu.id == @univerdad.ciudad.id %>
              <option value="<%= ciu.id %>" selected><%= ciu.nombre %></option>
            <% else %>
              <option value="<%= ciu.id %>"><%= ciu.nombre %></option>
            <% end %>
          <% end %>
        </select>
        <label>Ciudad *</label>
      </div>
      <div class="input-field col s12">
        <input id="txt-nit" type="text" name="txt-nit" class="validate" value="<%= @univerdad.nit %>">
        <label for="txt-nit">Nit *</label>
      </div>
      <div class="input-field col s12">
        <input id="txt-nombre" type="text" name="txt-nombre" class="validate" value="<%= @univerdad.nombre %>">
        <label for="txt-nombre">Nombre *</label>
      </div>
      <div class="input-field col s12">
        <input id="txt-dereccion" type="text" name="txt-dereccion" class="validate" value="<%= @univerdad.dereccion %>">
        <label for="txt-dereccion">Dirección *</label>
      </div>
      <div class="input-field col s12">
        <input id="txt-telefono" type="text" name="txt-telefono" class="" value="<%= @univerdad.telefono %>">
        <label for="txt-telefono">Teléfono</label>
      </div>
    </div>
    <div class="row">
      <div class="col s6">
        <input type="hidden" name="txt-id" value="<%= @univerdad.id %>">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <button type="button" class="btn" id="btn-modificarUniversidad" onclick="modificarUnversidad()">
          Actualizar <i class="material-icons right">edit</i>
        </button>
      </div>
      <div class="col s6">
        <a href="<%= universidad_index_path %>" class="btn">
          Listar <i class="material-icons right">list</i>
        </a>
      </div>
    </div>
  </form>
</div>
